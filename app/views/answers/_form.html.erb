<%= form_for @answer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Текст", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area', :rows=>8, :style=>"width:700px;" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
    <%= link_to "Отмена",
                answers_path, :class => 'btn' %>
  </div>
<% end %>
