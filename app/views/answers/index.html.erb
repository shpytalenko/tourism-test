<%- model_class = Answer -%>
<div class="alert alert-info">
  <h4><%=t '.title', :default =>"Ответы:"  %></h4>
</div>
<table class="table table-striped">
    <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td style="width:75%;"><%= answer.content %></td>
        <td>
          <%= link_to 'Редактировать',
                      edit_answer_path(answer), :class => 'btn btn-mini' %>
          <%= link_to 'Удалить',
                      answer_path(answer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Добавить',
            new_answer_path,
            :class => 'btn btn-primary' %>
<br />
            <br />

<%- model_class = Question -%>
<div class="page-header">
</div>
<div class="alert alert-info">
  <h4><%=t '.title', :default =>"Вопросы:"  %></h4>
</div>
<table class="table table-striped">
  
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td style="width:85%;">
          <%= question.text %>
          <br />
          <ul class="">
            <% question.variants.each do |variant|%>
              <% 
                jobs = ""
                variant.jobs.each do |j|
                  jobs << " #{j.name} "
                end
              %>
              <% if question.images == true %>
                <li> <%= variant.text %> ,  <span class="muted"> ( <%=jobs %> <%= link_to "ред.", :controller => :variants, :action => :edit , :id => variant.id %> ) 
                    <br>
 <%= image_tag variant.image.url(:thumb) %>
                  </li>
              <% else %>     
                <li> <%= variant.text %>   <span class="muted"> ( <%=jobs %> <%= link_to "ред.", :controller => :variants, :action => :edit , :id => variant.id %> ) </li>
              <% end %> 
          <% end %>
          </ul>
        </td>
        <td>
          <%= link_to "Редактировать",
                      edit_question_path(question), :class => 'btn btn-mini' %>
          <%= link_to  "Удалить",
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
     
    <% end %>
  </tbody>
</table>
<% if Question.all.size < 12 %>
  <%= link_to "Добавить",  new_question_path, :class => 'btn btn-primary' %>
<% end %>
