<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.id, answer_path(answer) %></td>
        <td><%= answer.content %></td>
        <td><%=l answer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_answer_path(answer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      answer_path(answer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_answer_path,
            :class => 'btn btn-primary' %>
<br />
            <br />

<%- model_class = Question -%>
<div class="page-header">
</div>
<div class="alert alert-info">
  <h4><%=t '.title', :default =>"Вопросы:"  %></h4>
</div>
<table class="table table-striped">
  
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td style="width:85%;">
          <%= question.text %>
          <br />
          <ul class="">
            <% question.variants.each do |variant|%>
              <% 
                jobs = ""
                variant.jobs.each do |j|
                  jobs << " #{j.name} "
                end
           
           
              %>
              <% if question.images == true %>
                <li> <%= variant.text %> ,  <%= image_tag variant.image.url(:thumb) %> <span class="muted"> ( <%=jobs %> <%= link_to "ред.", :controller => :variants, :action => :edit , :id => variant.id %> ) </li>
              <% else %>     
                <li> <%= variant.text %>   <span class="muted"> ( <%=jobs %> <%= link_to "ред.", :controller => :variants, :action => :edit , :id => variant.id %> ) </li>
              <% end %> 
          <% end %>
          </ul>
        </td>
        <td>
          <%= link_to "Редактировать",
                      edit_question_path(question), :class => 'btn btn-mini' %>
          <%= link_to  "Удалить",
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
     
    <% end %>
  </tbody>
</table>

<%= link_to "Добавить",
            new_question_path,
            :class => 'btn btn-primary' %>
